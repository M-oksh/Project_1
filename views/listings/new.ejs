<% layout(`/layouts/boilerplate`) %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <body>
            <h3>Create New Listing</h3>
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="Enter a catchy Title" required class="form-control">
                    <div class="valid-feedback">This looks good!!</div>
                    <div class="invalid-feedback">This looks bad!!</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="listing[description]" required class="form-control"></textarea>
                    <div class="valid-feedback">This looks good!!</div>
                    <div class="invalid-feedback">Please enter Title!!</div>
                </div>
                <!-- <div class="mb-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input type="text" name="listing[image][url]" placeholder="Enter Image URL" class="form-control">
                    <div class="valid-feedback">This looks good!!</div>
                    <div class="invalid-feedback">Please enter a small description!!</div>
                </div> --> 
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" name="listing[image]" class="form-control" required>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]"  placeholder="1200">
                        <div class="valid-feedback">This looks good!!</div>
                        <div class="invalid-feedback">Price is not valid!!</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" required placeholder="India">
                        <div class="valid-feedback">This looks good!!</div>
                        <div class="invalid-feedback">Country is not valid!!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" required placeholder="Ratlam , Madhya Pradesh"> 
                    <div class="valid-feedback">This looks good!!</div>
                    <div class="invalid-feedback">Location is not valid!!</div>
                </div>
                <button class="btn btn-dark btn-new mt-3">Add</button>
            </form>
        </body>
    </div>
</div>